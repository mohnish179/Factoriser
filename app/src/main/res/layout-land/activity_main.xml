<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:name="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="40dp"
        android:layout_alignParentStart="true"
        android:textSize="30sp"
        android:textAlignment="center"
        android:gravity="center_horizontal"
     android:textColor="#E91E63"

        android:layout_marginStart="60dp"
        android:text="@string/enter_the_no_you_want_to_factorise" />

    <EditText
        android:id="@+id/et1"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:ems="10"
        android:layout_marginStart="60dp"
        android:layout_marginTop="90dp"
        android:inputType="number"
        android:textColor="#00BCD4"
        android:autofillHints=" "
        android:hint="@string/enter_no_here"
        android:textColorHint="#9C27B0"
        android:textSize="30sp"
        tools:ignore="RelativeOverlap" />


    <Button
        android:id="@+id/bt1"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginStart="60dp"
        android:background="#00BCD4"
        android:layout_marginTop="210dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="60dp"
        android:text="@string/submit"
        android:textColor="#5C00FF" />

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="144dp"
        android:layout_marginRight="144dp"
        android:layout_toStartOf="@id/tv1"
        android:textColor="#FFFFFF"
        android:layout_toLeftOf="@id/tv1"
        android:layout_toEndOf="@id/tv1"
        android:layout_toRightOf="@id/tv1"
        android:text="@string/score"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/hs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="320dp"
        android:layout_marginEnd="117dp"
        android:layout_marginRight="117dp"
        android:layout_marginBottom="77dp"
        android:layout_toStartOf="@id/score"
        android:layout_toLeftOf="@id/score"
        android:text="@string/previous_high_score"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />


</RelativeLayout>